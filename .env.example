# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/arcanum_scribe"

# Required API Keys
OPENROUTER_API_KEY="your-openrouter-api-key-here"
FAL_API_KEY="your-fal-ai-api-key-here"

# Optional Direct Provider API Keys (for fallback)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"
GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-api-key-here"
STABILITY_API_KEY="your-stability-api-key-here"

# Note: We primarily use OpenRouter as unified provider
# Individual provider keys are optional fallbacks

# Application Configuration
NODE_ENV="development"
VITE_APP_NAME="Arcanum Scribe"
VITE_APP_VERSION="1.0.0"

# Server Configuration
PORT=3000
HOST="0.0.0.0"

# Security (Generate secure random strings for production)
JWT_SECRET="your-jwt-secret-key-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Optional: Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"

# Optional: Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Optional: Stripe Configuration (for billing)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:8080"